<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="School.Views.TeacherPage2"
             BackgroundColor="{DynamicResource BackgroundColor}"
             Title="Formulaire des profs">
    <VerticalStackLayout>
        <Label 
            Text="Veuillez entrer le nom d'un nouvel enseignant"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

            <Entry x:Name="firstnameEntered" Placeholder="Entrez le prénom" />
            <Entry x:Name="lastnameEntered" Placeholder="Entrez le nom" />
            <Entry x:Name="salaryEntered" Placeholder="Entrez le salaire" />
            <Button x:Name="createTeacherButton" Text="Créer enseignant" Clicked="OnCreateTeacherClicked" />
    
    <Button Text="Acceuil" Clicked="OnReturnToMainPageClicked" />
    </VerticalStackLayout>
</ContentPage>