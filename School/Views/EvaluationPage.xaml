<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="School.Views.EvaluationPage"
             BackgroundColor="{DynamicResource BackgroundColor}"
             Title="Saisie des Évaluations">
    <VerticalStackLayout>
        <Label 
            Text="Veuillez entrer l'évaluation pour un cours et un étudiant"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry x:Name="courseNameEntered" Placeholder="Entrez le nom du cours" />
        <Entry x:Name="studentNameEntered" Placeholder="Entrez le nom de l'étudiant" />
        <Entry x:Name="gradeEntered" Placeholder="Entrez la note ou l'appréciation" />

        <Button x:Name="createEvaluationButton" Text="Ajouter Évaluation" Clicked="OnCreateEvaluationClicked" />

        <!-- Ajoutez un bouton pour revenir à la MainPage -->
        <Button Text="Accueil" Clicked="OnReturnToMainPageClicked" />
    </VerticalStackLayout>
</ContentPage>
