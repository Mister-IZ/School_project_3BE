<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="School.Views.EvaluationPage"
             BackgroundColor="{DynamicResource BackgroundColor}"
             Title="Evaluation des étudiants">

    <VerticalStackLayout>
        <Label 
            Text="Veuillez entrer l'évaluation d'un étudiant pour un cours"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Picker x:Name="courseNamePicker" Title="Sélectionnez un cours" />
        <Picker x:Name="studentNamePicker" Title="Sélectionnez un étudiant" />
        <Picker x:Name="noteEnteredPicker" Title="Sélectionnez la note" />
        <Picker x:Name="appreciationEnteredPicker" Title="Sélectionner l'appréciation" />


        <Button x:Name="createEvaluationButton" Text="Enregistrer l'évaluation" Clicked="OnCreateEvaluationClicked" />

        <Button Text="Accueil" Clicked="OnReturnToMainPageClicked" />

        

    </VerticalStackLayout>
</ContentPage>
