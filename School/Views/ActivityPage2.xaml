<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="School.Views.ActivityPage2"
             BackgroundColor="{DynamicResource BackgroundColor}"
             Title="Formulaire des activités">
    <VerticalStackLayout>
        <Label 
            Text="Veuillez rajouter une activité pour l'établissement"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

            
            <Entry x:Name="courseEntered" Placeholder="Entrez l'activité" />
            <Button x:Name="createActivityButton" Text="Créer activitée" Clicked="OnCreateActivityClicked" />
    
    <!-- Ajoutez un bouton pour revenir à la MainPage -->
    <Button Text="Revenir à l'Acceuil " Clicked="OnReturnToMainPageClicked" />
    </VerticalStackLayout>
</ContentPage>