<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="School.Views.ActivityPage2"
             BackgroundColor="{DynamicResource BackgroundColor}"
             Title="Formulaire des activités">
    <VerticalStackLayout>
        <Label 
            Text="Veuillez rajouter une activité pour l'établissement"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry x:Name="courseEntered" Placeholder="Entrez le nom de l'activité" />
        <Entry x:Name="courseCode" Placeholder="Entrez le code de l'activité" />
        <Entry x:Name="courseCredits" Placeholder="Entrez le nombre de crédits de l'activité" />

        <Picker x:Name="courseTeacherPicker" Title="Sélectionnez un enseignant" />

        <Button x:Name="createActivityButton" Text="Créer activité" Clicked="OnCreateActivityClicked" />

        <Button Text="Accueil" Clicked="OnReturnToMainPageClicked" />
    </VerticalStackLayout>
</ContentPage>
