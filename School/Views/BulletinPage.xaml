<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="School.Views.BulletinPage"
             BackgroundColor="{DynamicResource BackgroundColor}"
             Title="Le Bulletin">

    <VerticalStackLayout>
        <Label Text="Sélectionnez un étudiant" VerticalOptions="Center" HorizontalOptions="Center" />
        <Picker x:Name="studentPicker" Title="Sélectionnez un étudiant" />
        <Button x:Name="viewGradesButton" Text="Voir le bulletin" Clicked="OnViewGradesClicked" />

        <ListView x:Name="gradesListView" ItemSelected="OnGradeSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding Course}" />
                            <Label Text="{Binding Note, StringFormat='Note: {0}'}" />
                            <Label Text="{Binding Appreciation, StringFormat='Appréciation: {0}'}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>


        <Label x:Name="averageLabel" Text="" VerticalOptions="End" HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>