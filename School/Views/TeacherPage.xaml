<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="School.Views.TeacherPage"
             Title="Liste des Professeurs">
    
    <VerticalStackLayout>
        <Label 
            Text="C'est la page professeur"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry x:Name="nameEntered" Placeholder="Entrez le nom" />
        <Entry x:Name="courseEntered" Placeholder="Entrez la matière" />
        <Button x:Name="createTeacherButton" Text="Créer enseignant" Clicked="OnCreateTeacherClicked" />
    </VerticalStackLayout>
</ContentPage>
