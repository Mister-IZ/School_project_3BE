<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="School.Views.StudentPage2"
             BackgroundColor="{DynamicResource BackgroundColor}"
             Title="Formulaire des étudiants">
    <VerticalStackLayout>
        <Label 
            Text="Veuillez inscrire un étudiant ainsi que les cours qu'il souhaite (cours par cours)"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry x:Name="coursefirstname" Placeholder="Entrez le prénom de l'étudiant" />
        <Entry x:Name="courselastname" Placeholder="Entrez le nom de l'étudiant" />

        <!-- Utilisez le Picker pour la sélection de l'enseignant -->
        <Picker x:Name="courseActivityPicker" Title="Sélectionnez une activité" />

        <Button x:Name="createActivityButton" Text="Créer étudiant" Clicked="OnCreateActivityClicked" />

        <!-- Ajoutez un bouton pour revenir à la MainPage -->
        <Button Text="Accueil" Clicked="OnReturnToMainPageClicked" />
    </VerticalStackLayout>
</ContentPage>