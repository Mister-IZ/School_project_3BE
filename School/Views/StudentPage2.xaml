<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="School.Views.StudentPage2"
             Title="Formulaire des étudiants">
    <VerticalStackLayout>
        <Label 
            Text="Veuillez entrer un étudiant"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

            <Entry x:Name="nameEntered" Placeholder="Entrez le nom" />
            <Button x:Name="createStudentButton" Text="Créer étudiant" Clicked="OnCreateStudentClicked" />
    </VerticalStackLayout>
</ContentPage>